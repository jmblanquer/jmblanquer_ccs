<?xml version="1.0"?>
<ruleset name="jmblanquer-ccs">
    <description>Est√°ndar personalizado basado en Moodle Extra con ajustes estrictos</description>

    <rule ref="moodle"/>
    <rule ref="moodle-extra"/>

    <!-- Reglas adicionales disponibles -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace"/>
    <rule ref="Squiz.Functions.FunctionDeclarationArgumentSpacing"/>
    <rule ref="Generic.CodeAnalysis.EmptyStatement"/>
    <rule ref="Generic.ControlStructures.InlineControlStructure"/>
    <rule ref="Generic.Files.LineLength"/>

    <!-- Regla para forzar coma final -->
    <rule ref="SlevomatCodingStandard.Arrays.TrailingArrayComma"/>
    
    <!-- Excluir sniffs no disponibles si no los usas -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
